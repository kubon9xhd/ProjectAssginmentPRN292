@{
    ViewBag.Title = "Login";
}
@section page{
    Login
}
@model  Assiginment.Areas.Admin.Models.LoginModel
<!-- login Start-->
<div class="login-form-area mg-t-30 mg-b-40">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4"></div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken();
                <div id="adminpro-form" class="adminpro-form">
                    <div class="col-lg-4">
                        <div class="login-bg">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="logo">
                                        <a href="#">
                                            <img src="/Assets/Admin/img/logo/log.png" alt="" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="login-title">
                                        <h1>Login Form</h1>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="login-input-head">
                                        <p>E-mail</p>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.Username, new
                                        {
                                           @autofocus = "autofocus"
                                       })
                                        <i class="fa fa-envelope login-user" aria-hidden="true"></i>
                                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="login-input-head">
                                        <p>Password</p>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="login-input-area">
                                        @Html.PasswordFor(model => model.Password, new
                                           {
                                               @autofocus = "autofocus"
                                           })
                                        <i class="fa fa-lock login-user"></i>
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="forgot-password">
                                                <a href="#">Forgot password?</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="login-keep-me">
                                                <label class="checkbox">
                                                    @Html.CheckBoxFor(model => model.RememberMe)
                                                    <i></i>Keep me logged in
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">

                                </div>
                                <div class="col-lg-8">
                                    <div class="login-button-pro">
                                        <button type="submit" class="login-button login-button-rg">Register</button>
                                        <button type="submit" class="login-button login-button-lg">Log in</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="col-lg-4"></div>
        </div>
    </div>
</div>
<!-- login End-->
@section script{
    <!-- form validate JS
       ============================================ -->
    <script src="/Assets/Admin/js/jquery.form.min.js"></script>
}
